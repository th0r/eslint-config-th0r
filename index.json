{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "array-element-newline": ["error", "consistent"],
    "arrow-body-style": ["error", "as-needed"],
    "array-bracket-newline": ["error", "consistent"],
    "array-bracket-spacing": ["error", "never"],
    "array-callback-return": ["error", {"allowImplicit": false}],
    "arrow-parens": "off",
    "arrow-spacing": ["error", {"before": true, "after": true}],
    "brace-style": ["error", "1tbs", {"allowSingleLine": true}],
    "camelcase": ["error", {"properties": "never"}],
    "capitalized-comments": "off",
    "class-methods-use-this": "off",
    "comma-dangle": ["error", "never"],
    "comma-spacing": ["error", {"before": false, "after": true}],
    "comma-style": ["error", "last"],
    "complexity": ["error", 20],
    "consistent-return": "off",
    "constructor-super": "error",
    "curly": ["error", "multi-line"],
    "dot-notation": ["error", {"allowKeywords": true, "allowPattern": "^[a-z]+(_[a-z]+)+$"}],
    "eol-last": "off",
    "eqeqeq": ["error", "allow-null"],
    "for-direction": "error",
    "function-paren-newline": "off",
    "func-call-spacing": ["error", "never"],
    "generator-star-spacing": ["error", "after"],
    "getter-return": "error",
    "handle-callback-err": "error",
    "indent": ["error", 2, {
      "SwitchCase": 1,
      // To be able to write multiline string without spaces in the beginning
      "ignoredNodes": ["TemplateLiteral"]
    }],
    "jsx-quotes": ["error", "prefer-double"],
    "keyword-spacing": "error",
    "key-spacing": [1, {"beforeColon": false, "afterColon": true}],
    "linebreak-style": ["error", "unix"],
    "lines-between-class-members": ["error", "always", {"exceptAfterSingleLine": true}],
    "line-comment-position": ["error", {"position": "above"}],
    "max-len": ["error", {"code": 120, "tabWidth": 4}],
    "newline-per-chained-call": ["error", {"ignoreChainWithDepth": 2}],
    "new-cap": ["error", {"newIsCap": true, "capIsNew": false}],
    "new-parens": "off",
    "nonblock-statement-body-position": ["error", "beside"],
    "no-alert": "off",
    "no-array-constructor": "error",
    "no-async-promise-executor": "error",
    "no-await-in-loop": "off",
    "no-buffer-constructor": "error",
    "no-caller": "error",
    "no-case-declarations": "error",
    "no-class-assign": "off",
    "no-compare-neg-zero": "error",
    "no-cond-assign": ["error", "except-parens"],
    "no-confusing-arrow": ["error", {"allowParens": true}],
    "no-console": "off",
    "no-control-regex": "error",
    "no-constant-condition": "error",
    "no-const-assign": "error",
    "no-debugger": "error",
    "no-delete-var": "error",
    "no-dupe-args": "error",
    "no-dupe-keys": "error",
    "no-duplicate-case": "error",
    "no-duplicate-imports": ["error", {"includeExports": true}],
    "no-empty": "error",
    "no-empty-character-class": "error",
    "no-empty-pattern": "error",
    "no-eval": "error",
    "no-extend-native": "error",
    "no-extra-bind": "error",
    "no-extra-boolean-cast": "error",
    "no-extra-parens": "off",
    "no-ex-assign": "error",
    "no-fallthrough": "error",
    "no-floating-decimal": "error",
    "no-func-assign": "error",
    "no-global-assign": "error",
    "no-implied-eval": "error",
    "no-inner-declarations": "error",
    "no-invalid-regexp": "error",
    "no-iterator": "error",
    "no-labels": "off",
    "no-label-var": "error",
    "no-lone-blocks": "off",
    "no-loop-func": "off",
    "no-misleading-character-class": "error",
    "no-mixed-operators": "error",
    "no-mixed-spaces-and-tabs": "error",
    "no-multiple-empty-lines": ["error", {"max": 2}],
    "no-multi-assign": "off",
    "no-multi-spaces": "error",
    "no-multi-str": "off",
    "no-new": "off",
    "no-new-func": "error",
    "no-new-object": "error",
    "no-new-wrappers": "error",
    "no-obj-calls": "error",
    "no-octal": "error",
    "no-octal-escape": "error",
    "no-process-exit": "off",
    "no-proto": "error",
    "no-prototype-builtins": "off",
    "no-redeclare": "error",
    "no-regex-spaces": "error",
    "no-restricted-syntax": ["error", "WithStatement"],
    "no-return-assign": "off",
    "no-return-await": "off",
    "no-script-url": "error",
    "no-self-assign": ["error", {"props": true}],
    "no-sequences": "error",
    "no-shadow": "off",
    "no-shadow-restricted-names": "error",
    "no-sparse-arrays": "error",
    "no-tabs": "error",
    "no-template-curly-in-string": "error",
    "no-this-before-super": "error",
    "no-trailing-spaces": ["error", {"skipBlankLines": false}],
    "no-undef": "error",
    "no-undef-init": "error",
    "no-underscore-dangle": "off",
    "no-unsafe-finally": "error",
    "no-unsafe-negation": "error",
    "no-unused-expressions": "off",
    // Ignoring unused last "next" argument in Express error handlers
    "no-unused-vars": ["error", {"argsIgnorePattern": "^next$"}],
    "no-useless-catch": "error",
    "no-useless-computed-key": "error",
    "no-useless-escape": "error",
    "no-useless-rename": "error",
    "no-useless-return": "error",
    "no-use-before-define": [1, "nofunc"],
    "no-var": "error",
    "no-with": "error",
    "object-curly-newline": ["error", {"consistent": true}],
    "object-curly-spacing": ["error", "never"],
    "object-property-newline": ["error", {"allowAllPropertiesOnSameLine": true}],
    "object-shorthand": ["error", "always"],
    "one-var": ["error", "never"],
    "padding-line-between-statements": ["error",
      {"blankLine": "always", "prev": "directive", "next": "*"}
    ],
    "prefer-const": ["error", {"destructuring": "all"}],
    "prefer-destructuring": ["error", {
      "array": false,
      "object": true
    }],
    "prefer-numeric-literals": "error",
    "prefer-object-spread": "error",
    "prefer-promise-reject-errors": ["error", {"allowEmptyReject": true}],
    "prefer-reflect": "off",
    "prefer-spread": "error",
    "quotes": ["error", "single", "avoid-escape"],
    "quote-props": "off",
    "require-atomic-updates": "error",
    "require-await": "off",
    "require-unicode-regexp": "error",
    "require-yield": "error",
    "rest-spread-spacing": ["error", "never"],
    "semi": ["error", "always", {"omitLastInOneLineBlock": true}],
    "semi-spacing": "off",
    "semi-style": ["error", "last"],
    // Setting "error" won't allow to comment blocks of code with IDE shortcut
    "spaced-comment": "off",
    "space-before-blocks": ["error", "always"],
    "space-before-function-paren": ["error", {"anonymous": "always", "named": "never"}],
    "space-infix-ops": "error",
    "space-unary-ops": "off",
    "strict": "off",
    "symbol-description": "error",
    "switch-colon-spacing": "error",
    "template-tag-spacing": ["error", "never"],
    "unicode-bom": "off",
    "use-isnan": "error",
    "valid-typeof": ["error", {"requireStringLiterals": true}],
    "wrap-iife": ["error", "inside"],
    "yoda": ["error", "never"]
  }
}
